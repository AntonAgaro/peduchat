{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "allowJs": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/tests"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
